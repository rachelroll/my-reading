.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 60rpx 15rpx;
  border-radius: 50%;
  border: 2px solid white;
}

.userinfo-nickname {
  color: #fff;
  display: block;
  margin-bottom: 8px;
}

.userinfo-details {
  color: #fff;
  font-size: 66%;
  display: block;
}

.usermotto {
  margin-top: 200px;
}

.banner {
  background-color: #639764;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  height: 280rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
}

.banner-left {
  /* border: 1px solid black; */
  padding: 40rpx 0 0 80rpx;
  line-height: 20px;
}

.banner-right {
  /* border: 1px solid black; */
  padding-right: 80rpx;
}

.statistic-items {
  display: flex;
  justify-content: space-around;

}

.item {
  text-align: center;
}

.item text {
  display: block;
  font-size: 80%;
}


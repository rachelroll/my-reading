<!-- 引入 wxs 脚本 -->
<wxs module="strCut" src="./index.wxs"></wxs>

<swiper
  indicator-dots=true
  autoplay=true
  interval="4000"
  duration="400"
  circular=true
>
  <block wx:for="{{ images }}">
    <swiper-item>
      <view class="top-banner">
        <image src="{{ item }}"></image>
      </view>
    </swiper-item>
  </block>
</swiper>

